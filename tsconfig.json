{
  "compilerOptions": {
    "outDir": "./app/public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "jsx": "react",
    "types": [],
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2017"
    ],
    "target": "es5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./web/app/*"
      ],
      "@components/*": [
        "./web/components/*"
      ],
      "@store/*": [
        "./web/mobx/*"
      ],
      "@config/*": [
        "./web/config/*"
      ],
      "@lib/*": [
        "./web/lib/*"
      ],
      "@declarations/*": [
        "./declarations/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      }
    ],
  },
  "include": [
    "declarations/*",
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "app/public",
    "app/views"
  ]
}